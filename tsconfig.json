{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules",
    "dist",
    ".uxpin-merge",
    "**/presets/*"
  ],
  "include": [
    "src/components/"
  ]
}